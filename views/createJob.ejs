<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>CREATE JOB VACANCY</title>
</head>
<body>
    <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <a class="navbar-brand" href="homecorp">CareerLink</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-flex flex-row-reverse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="homecorp">Home</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/api/user/login">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 right-box">
            <div class="row align-items-center card-header">
                <div class="header-text mb-4">
                    <h2>CREATE JOB VACANCY</h2>
                </div>
                <form id="createjob" action="create" method="post" class="w-100">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="input-group mb-1">
                        <input type="text" name="Title" class="form-control form-control-lg bg-light fs-6" placeholder="Title" aria-label="Title" aria-describedby="addon-wrapping" >
                    </div>
                    <div class="mb-1">
                        <label name="description" for="exampleFormControlTextarea1" class="form-label  bg-light fs-6 ">Description</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                      </div>
                    <div class="input-group mb-1">
                        <input type="location" name="location" class="form-control form-control-lg bg-light fs-6" placeholder="location">
                    </div>
                        <select name="id" class="form-select form-select-lg mb-1 bg-light fs-6" aria-label="Large select example" name="skill">
                            <option>Select skill</option>
                            <% dataContents.forEach(skill => { %>
                                <option value="<%= skill.id %>"><%= skill.skill %></option>
                            <% }); %>
                            </select>
                    </select>
                    <div class="input-group mb-5 d-flex justify-content-between">
                        <div class="input-group mb-1">
                            <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>

